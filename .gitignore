import React, { useEffect } from "react";
import { Route, Routes, Navigate } from "react-router-dom";
import AOS from "aos";
import "aos/dist/aos.css";
import RegisterLogin from "./Page/UserManagement/Auth/RegisterLogin";
import DoctorRegister from "./Components/Auth/Register/Doctor/DoctorRegister";
import ProtectedRoute from "./Components/Protect/ProtectRoute";

import DoctorDashboard from "./Page/Dashboard/DoctorDashboard/DoctorDashboard";

import { useAuth } from "./Context/AuthContext";
import Home from "./Page/Home/Home";
import NotFound from "./Page/404/NotFound";
import PatientDashboard from "./Page/Dashboard/PatientDashboard/PatientDashboard";

const App: React.FC = () => {
  const { isLoggedIn, user } = useAuth();
  console.log("isLoggedIn:", isLoggedIn, "user:", user);

  useEffect(() => {
    AOS.init({ duration: 1000, once: true });
  }, []);

  return (
    <div className="app__container">
      <Routes>
        <Route path="/" element={<Home />} />
        <Route path="/auth" element={<RegisterLogin />} />
        <Route path="/doctor/register" element={<DoctorRegister />} />

        {/* Dynamic dashboard route */}
        <Route
          path="/dashboard"
          element={
            <ProtectedRoute
              isLoggedIn={isLoggedIn}
              user={user}
              allowedRole={user?.role}
            >
              {user?.role === "patient" ? (
                <PatientDashboard />
              ) : user?.role === "doctor" ? (
                <DoctorDashboard />
              ) : (
                <Navigate to="/" replace />
              )}
            </ProtectedRoute>
          }
        />

        {/* Not Found Page */}
        <Route path="*" element={<NotFound />} />
      </Routes>
    </div>
  );
};

export default App;
